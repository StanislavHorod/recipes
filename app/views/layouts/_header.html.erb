<header class="header all-page">
  <% if user_signed_in? %>
    <div class="top-section">
      <div class="cont">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <span>Your trial will expire in 29 days.</span>
          <div class="user_signed_in">
            <ul class="nav navbar-nav navbar-left menu">
              <li><%= link_to 'MY PROFILE', profile_path %></li>
              <li><%= link_to 'LOG OUT', destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="cont">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="row">
        <button type="button" id="mob-menu" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <nav class="main-menu collapse navbar-collapse" id="menu">
          <ul class="nav navbar-nav navbar-left menu">
            <li><%= link_to 'About Us', about_us_path %></li>
            <li><%= link_to 'FAQs', faqs_path %></li>
            <li><%= link_to 'Contact Us', contact_us_path %></li>
            <li><a href="http://blog.wholesumfoodcalc.com">Blog</a></li>
          </ul>
          <div class="login_buttons">
              <ul class="nav navbar-nav menu">
            <% if user_signed_in? %>
              <li><%= link_to 'My recipes', recipes_path %></li>
              <li><%= link_to 'Ingredients', ingredients_path %></li>
              <li><%= link_to 'Meal plans', groups_path %></li>
            <% else %>
                <li><%= link_to 'Log in', new_user_session_path %></li>
                <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <% end %>
              </ul>
          </div>
        </nav>
        <div id="logo" class="logo">
          <%= link_to root_path do %>
            <%= image_tag 'logo.png' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<script type="text/javascript">
  $(document).ready(function() {
    if($(window).width()<768){
      $("#logo").after($("#menu"));
    }
    $(window).resize(function() {
      if($(window).width()<768){
        $("#logo").after($("#menu"));
      }
      else{
        $("#logo").before($("#menu"));
      }
    });
  });
</script>
